<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sullog.backend.member.mapper.MemberMapper">

    <insert id="insertMember" parameterType="sullog.backend.member.entity.Member">
        INSERT INTO member
        (
            email,
            nickname,
            search_word_list
        )
        VALUES (
            #{email},
            #{nickName},
            #{searchWordList, typeHandler=sullog.backend.member.mapper.typehandler.SearchWordListTypeHandler}
        )
    </insert>

    <select id="selectMemberByEmail" resultType="sullog.backend.member.entity.Member">
        SELECT * FROM member WHERE email = #{email}
    </select>

    <select id="selectRecentSearchHistory" resultType="String">
        SELECT search_word_list
        FROM member
        WHERE member_id = #{memberId}
    </select>

</mapper>